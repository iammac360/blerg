.authform
  = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    %h2 Sign in
    %hr
    .form-group
      = f.input :email, required: false, autofocus: true, label: false, placeholder: "Email", input_html: { class: "form-control "}
    .form-group
      = f.input :password, required: false, label: false, placeholder: "Password", input_html: { class: "form-control "}
    = f.input :remember_me, as: :boolean, label: false, inline_label: "Yes, Remember me", inline_label_html: { class: "margin-left-10" } if devise_mapping.rememberable?
    %hr
    .form-group
      = f.button :submit, "Sign in", class: "btn btn-primary form-control"
    = render "devise/shared/links"
